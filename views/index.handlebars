<div class="mt-5">
  <h1 class="text-center">你想對誰說幹話？</h1>
</div>

<form action="/" method="POST">
  <div class="container mt-5">
    <div class="form-group row justify-content-around pb-4">
      {{#each career}}

      <div class="card mx-2 col-3 text-center ">
        <label>
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name_en}}" width="150px" height="200px">

          <div class="card-body p-3">
            <input type="radio" name="job" id="{{this.name_en}}" value="{{this.name_en}}"
              {{ifEquals this.name_en ../job}}>

        </label>
        <label for="{{this.name_en}}"></label>{{this.name}}</label>
      </div>
    </div>
    {{/each}}

  </div>

  <div class="form-group row mt-5 ml-4">
    <button class="btn btn-success col-2" type="submit">產生幹話</button>

    <!-- display sentence here -->
    <div class="rubbishSentence col-8 ml-4">{{rubbishSentence}}</div>
  </div>
  </div>
</form>